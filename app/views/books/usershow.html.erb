<h3>ユーザー情報</h3><br><br>

<div class="container">
	<div class="row">

		<div class="col-lg-4">

	<div><%= attachment_image_tag @user, :image, :fill, 30, 30,  class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	</div>
	<div>名前: <%= @user.name %></div>
	<div>自己紹介文:<%= @user.introdaction %> </div>
		</div>
<div class="col-lg-8">
<table class="table table-striped">
	<tr>
		<th>本の名前</th><br>
		<th>感想</th>
	</tr>
	<% @books.where(user_id: @user.id).each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<th><%= link_to "表示", book_path(book.id) %></th>
	</tr>
	
	<% end %>
	
</table>
</div>

</div>
</div>