<h3 class="user">＜ユーザーマイページ＞</h3><br><br>

<div class="container">
	<div class="row">

		<div class="col-lg-4">

<div> <%= attachment_image_tag @user, :image, :fill, 100, 100,  class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></div><BR><BR><BR><BR><BR><BR>
<h4>＜名前＞<BR><%= @user.name %></h4><br>
<h4>＜自己紹介文＞<BR><%= @user.introdaction %> </h4>

<button class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
	<%= link_to "登録情報編集", edit_user_registration_path %></button><br><br><br>

<%= form_for(@book) do |f| %>

<p>新しく投稿する</p><br>

<div>本の名前</div>
<%= f.text_field :title %>

<div>感想</div>

<%= f.text_area :body %>

<%= f.submit "投稿" %>

<% end %></div>
<div class="col-lg-8">
<table class="table table-striped">
	<tr>
		<th>あなたが投稿した本の名前</th><br>
		<th>感想</th>
	</tr>
	<% @books.where(user_id: current_user.id).each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		
		<th><%= link_to "表示", book_path(book.id) %></th>
		<th><%= link_to "編集", edit_book_path(book.id) %></th>
		<th><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
	</tr>
	
	<% end %>
	
</table></div>

</div>
</div>
