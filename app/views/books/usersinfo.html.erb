<h3>投稿者一覧</h3><br><br>

<table class="table table-striped">
	<div class="container">
	<div class="row">
	<tr>
		<th class="col-lg-4">プロフィール写真</th>
		<th class="col-lg-8">名前</th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= link_to usershow_path(user.id) do %>
			<%= attachment_image_tag user, :image, :fill, 100, 100, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<% end %>

		<td><%= user.name %></td>


	<% end %>
</table>