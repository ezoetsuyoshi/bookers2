<h2>投稿一覧</h2>


<table class="table table-striped">
	<tr>
		<th>本の名前</th><br>
		<th>感想</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<th><%= link_to "表示", book_path(book.id) %></th>
	</tr>
	<% end %>
	
</table>

<h3>新しく本の感想を投稿する</h3>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>



<h4>本の名前</h4>
<%= f.text_field :title %>

<h4>感想</h4>
<%= f.text_area :body %>

<%= f.submit "投稿" %>

<% end %>
