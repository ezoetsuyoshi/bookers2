<h3 class="user">＜投稿一覧＞</h3><br><br>

<div class="container">
	<div class="row">

		<div class="col-lg-4">

<div> <%= attachment_image_tag @user, :image, :fill, 100, 100,  class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></div><BR><BR><BR><BR><BR><BR>
<h4>＜名前＞</h4><BR>
<p>　<%= @user.name %></p><br>
<h4>＜自己紹介文＞</h4><BR>
<p><%= @user.introdaction %></p>

<h3>新しく本の感想を投稿する</h3>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@book) do |f| %>

<h4>本の名前</h4>
<%= f.text_field :title %>
<h4>感想</h4>
<%= f.text_area :body %>
<%= f.submit "投稿" %>

<% end %>

</div>

<div class="col-lg-8">
<table class="table table-striped">
	<tr>
		<th>本の名前</th><br>
		<th>感想</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<!--これはlink_toを使ってdoのあとにきている文字をクリックするとリンク先に飛ぶようにしている-->
		<td><%= link_to book_path(book.id) do %>
			<%= book.title %></td>
			<% end %>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
</div>
</div>
</div>
